<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.ssu.infocom.opencv_contrib_test">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainApplication"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main_application"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Main2Activity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main2"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Main3Activity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main3"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ColorDetectActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_color_detect"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TrackerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_tracker"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CAMShiftActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_camshift"
            android:screenOrientation="landscape" />
        <activity
            android:name=".TrackerJNIActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_tracker_jni"
            android:screenOrientation="landscape" />
        <activity
            android:name=".trackerChoiceActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_tracker_choice_activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".CAMShiftActivity2"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_camshift"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest> <!-- android:launchMode="singleInstance"     //의미 없는거 같아서 제거했다.// -->
